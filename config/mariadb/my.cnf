[mysqld]
# Enable binary logging for CDC
log-bin=mysql-bin
binlog-format=ROW
binlog-row-image=FULL
server-id=1

# Binary log retention (7 days)
expire_logs_days=7

# Performance settings
max_binlog_size=100M
sync_binlog=1

# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
